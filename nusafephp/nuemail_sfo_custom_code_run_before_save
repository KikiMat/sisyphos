if('#replyto#' == ''){
    nuDisplayError('User must have an Email Address');
    return;
}

$to = '#to#';
if ( '#sendcopy#' == '1' ) {
    $to.=','.'#replyto#'; 
}

nuDebug('#sendcopy#');

if('#nu_pdf_code#'!='') {
    nuEmail('#nu_pdf_code#', $to, '#subject#','#message#', $hashData);
}
else if('#nu_php_code#'!='') {
    nuEmail('#nu_php_code#', $to, '#subject#','#message#', $hashData);
}
else {
    nuEmail('', $to, '#subject#','#message#', $hashData);
}